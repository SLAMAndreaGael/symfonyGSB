{% extends "SLAMGSBBundle::accueil.html.twig" %}
{% block body %}
{% block bloc1 %}
<div id="contenu">
     <table class="listeLegere">
       <h2>Affecter un v√©hicule</h2>
       {% if(message is defined)%}
         <div class ="erreur">
         <ul>{{ message }}</ul></div>
      {% endif%}
     <form method="POST" action="{{path('slamgsb_valideraffecter')}}">
       <label>Visiteur : </label>
        <select name="visiteur" id="visiteur">
        <option value="tous les id" selected="selected">Tous les id</option>
         {% for unId in lesId %}
           {% set id = unId.id %}
        <option value="id">{{id}}</option>
         {% endfor %}
       </select></br>
       <label>Immatriculation: </label>
       <select name="immat" id="immat">
       <option value="toutes les immat" selected="selected">Toutes les immat</option>
         {% for uneImmat in lesImmat %}
           {% set immat = uneImmat.immat %}
        <option value="immat">{{immat}}</option>
         {% endfor %}
        </select></br>
        <input type="submit" value="Valider" name="valider"/>
        <input type="reset" value="Annuler" name="annuler"/>
      </form>
    </div>
{% endblock %}
{% endblock %} 
