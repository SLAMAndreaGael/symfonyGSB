{% extends "SLAMGSBBundle::accueil.html.twig" %}
{% block body %}
{% block bloc1 %}
<div id="contenu">
     <table class="listeLegere">
       <h2>Véhicules utilisés</h2>
          <tr>
             <th class="marque">Marque</th>
             <th class="modele">Modèle</th>
             <th class="date">Date</th>
             <th class="immat">Immatriculation</th>
          </tr>
          {% for unVehicule in lesvehicules %}
             {% set marque = unVehicule.marque %}
             {% set modele = unVehicule.modele %}
             {% set dateDebut = unVehicule.dateDebut %}
             {% set immat = unVehicule.immat %}
          <tr>
             <td>{{marque}}</td>
             <td>{{modele}}</td>
             <td>{{dateDebut}}</td>
             <td>{{immat}}</td>
          </tr>
          {% endfor %}
       </table>
     </div>
{% endblock %}
{% endblock %}
